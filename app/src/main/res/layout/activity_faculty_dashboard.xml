<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facultyDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3"
    android:padding="24dp"
    tools:context=".FacultyDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/facultyProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/human_icon"
            android:layout_marginTop="48dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/facultyWelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Faculty"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Buttons Section -->
        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“… View Schedule"
            android:layout_marginTop="32dp"
            android:backgroundTint="#c90060"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEditCalendar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ—“ï¸ Edit Calendar"
            android:layout_marginTop="12dp"
            android:backgroundTint="#c90060"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEditRoom"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ« Edit Room Availability"
            android:layout_marginTop="12dp"
            android:backgroundTint="#c90060"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnViewAttendance"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="âœ… View Attendance"
            android:layout_marginTop="12dp"
            android:backgroundTint="#c90060"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸšª Logout"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#9e003f"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
